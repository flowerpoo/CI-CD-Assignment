pipeline {
    agent any
    environment {
        EC2_INSTANCE = '52.91.39.36'
    }

    stages {
        stage('source') {
            steps {
                echo 'clone the git code' 
                git branch: 'main', url: 'https://github.com/flowerpoo/CI-CD-Assignment.git'
                sh 'cat requirements.txt'
                
            }
        }
        stage('verify python version ') {
            steps {
                echo 'check version' 
                sh 'python3 --version'
                
            }
        }
        stage('Intall requirements') {
            steps {
                sh 'pip install -r requirements.txt'
                
            }
        }
        stage('Test') {
            steps {
                
                sh 'python3 test.py'
                
            }
        }
        
                stage('Deploy to EC2') {
            steps {
                script {
                   // Define the SSH key file path
                    def sshKeyPath = '/home/ubuntu/.ssh'
                    
                    def ec2IpAddress = 'your-ec2-instance-ip'
                    def sshCommand = "ssh -i ${sshKeyPath} ec2-user@${ec2IpAddress}"
                    sh '''
                    
                    git clone https://github.com/flowerpoo/CI-CD-Assignment.git
                    cd CI-CD-Assignment
                    python3 app.py
                    '''
                    
                  

                }
            }
        }

       
    }
}
